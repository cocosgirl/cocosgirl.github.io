/* 固定左侧边栏 */
#sidebar {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 240px; /* 根据需要调整宽度 */
  z-index: 999;
  overflow: auto;
  background: #fff; /* 可根据需要修改背景颜色 */
  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
}

/* 调整主内容区域的宽度 */
#main {
  margin-left: 240px; /* 与边栏宽度一致，确保右侧内容区域不被遮挡 */
  padding-left: 20px; /* 可以根据需要调整间距 */
}

/* 调整页面的滚动条行为 */
body {
  padding-left: 240px; /* 确保页面内容不会被侧边栏遮挡 */
}

